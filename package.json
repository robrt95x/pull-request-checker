{
  "name": "pull-request-reviewer",
  "version": "1.0.0",
  "description": "Automated Pull Request reviewer using Claude AI",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "review": "ts-node src/index.ts",
    "review:prod": "npm run build && npm run start",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "pull-request",
    "code-review",
    "claude-ai",
    "automation",
    "typescript"
  ],
  "author": "Roberto Robles",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "mustache": "^4.2.0",
    "simple-git": "^3.24.0"
  },
  "devDependencies": {
    "@types/mustache": "^4.2.2",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
